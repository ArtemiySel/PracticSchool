<Page x:Class="Practica.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" >

    <Grid>
        <Grid.RenderTransform>
            <TranslateTransform x:Name="ShakeTransform"/>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="#e4ebeb" CornerRadius="5" BorderBrush="Black" BorderThickness="1"  Grid.Column="1" Margin="20,20,20,20">
            <Frame x:Name="frame"  Background="WhiteSmoke" NavigationUIVisibility="Hidden" >
                <Frame.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Frame.Resources>
            </Frame>
        </Border>



        <Border Background="#e4ebeb"  BorderBrush="Black" BorderThickness="1"   >
            <Canvas Background="#F4E8D3" Grid.Row="0" />

        </Border>









        <StackPanel >

            <TextBlock Text="Таблицы" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="24" Margin="0,15,0,0"/>


            <Button x:Name="but" Margin="0,5,0,5" Width="120" Height="30" HorizontalAlignment="Center" Content="ЗП" Background="#67BA80" Foreground="#FFFFFF" Click="but_Click_1" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="but1" Margin="0,5,0,5" Width="120" Height="30" HorizontalAlignment="Center" Content="Работник" Background="#67BA80" Foreground="#FFFFFF" Click="but1_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="but2" Margin="0,5,0,5" Width="120" Height="30" HorizontalAlignment="Center"  Content="Финансовые года" Background="#67BA80" Foreground="#FFFFFF" Click="but2_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="but3" Margin="0,5,0,5" Width="120" Height="30" HorizontalAlignment="Center" Content="Поставщики" Background="#67BA80" Foreground="#FFFFFF" Click="but3_Click"   >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="but4" Margin="0,5,0,5" Width="120" Height="30" HorizontalAlignment="Center" Content="Категория бюджета" Background="#67BA80" Foreground="#FFFFFF" Click="but4_Click"    >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" Height="50">

            <Button Width="100" Height="30" Background="Red" Foreground="Black" Content="Выход" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click">
                <Button.ToolTip>
                    <ToolTip>
                        Ты уверен?
                    </ToolTip>
                </Button.ToolTip>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>

            </Button>
        </StackPanel>

    </Grid>

</Page>
